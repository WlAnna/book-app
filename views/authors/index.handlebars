{{> header }}

<h2 class="page-header">Search Authors</h2>
<form>
    <div class="form-row">
        <div class="form-item">
            <label>Name</label>
            <input type="text" name="name" value="{{searchOptions.name}}">
        </div>
    </div>
    <div class="form-row form-row-end form-row-first">
        <button class="btn btn-primary btn-main" type="submit">Search</button>
    </div>
</form>

{{#each authors}}
<div class="content">
    <div class="author-row">
        <div class="author-name">{{this.author}}</div>
        <div class="btn-row">
            {{{dynamicLink this.authorId "View"}}}
            {{{dynamicLinkEdit this.authorId "Edit"}}}
            <form method="POST" action="/authors/{{this.authorId}}?_method=DELETE">
                <button class="btn btn-danger" type="submit"> Delete</button>
            </form>
        </div>
    </div>
</div>
{{/each}}

{{>loadButton}}

{{>footer}}