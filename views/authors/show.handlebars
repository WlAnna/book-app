{{> header }}

<h2 class="page-header">{{author.author.name}}</h2>

<div class="btn-row">
    {{{dynamicLinkEdit author.author.id "Edit"}}}
    <form method="POST" action="/authors/{{author.author.id}}?_method=DELETE">
        <button type="submit" class="btn btn-danger"> Delete</button>
    </form>
</div>

<div>
    {{#if book}}
    <h2 class="page-header">Books By Author</h2>
    
    <div class="book-grid-by-author">
        {{#each book}}
        <a href="/books/{{this.id}}">
            <img class="book-cover" src="data:image/png;base64,{{this.cover}}" alt="DB Image" height="150" width="100" />
        </a>
        {{/each}}
    </div>
    {{/if}}
</div>

{{>footer}}